<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/channelGrpLayout">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDeviceLabel"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:text="Device #1"
                android:textAllCaps="false"
                android:textStyle="normal|bold" />

            <ProgressBar
                android:id="@+id/rssiBar"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:max="350"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:progress="256" />

            <TextView
                android:id="@+id/txtRssi"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0"
                android:gravity="center_vertical|center_horizontal"
                android:text="234" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center_vertical"
                android:text="RF Band " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDecBand"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="\u25C0"
                    android:textStyle="normal|bold" />


                <TextView
                    android:id="@+id/txtBand"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Race"
                    android:textColor="?android:attr/textColorPrimaryNoDisable" />

                <Button
                    android:id="@+id/btnIncBand"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="\u25B6"
                    android:textStyle="normal|bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center_vertical"
                android:text="Channel #" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDecChannel"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="\u25C0"
                    android:textStyle="normal|bold" />


                <TextView
                    android:id="@+id/txtChannel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="1"
                    android:textColor="?android:attr/textColorPrimaryNoDisable" />

                <TextView
                    android:id="@+id/txtFreq"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="5620Mhz"
                    android:textColor="?android:attr/textColorPrimaryNoDisable" />


                <Button
                    android:id="@+id/btnIncChannel"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="\u25B6"
                    android:textStyle="normal|bold" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>