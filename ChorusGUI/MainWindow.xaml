<Window x:Name="window" x:Class="chorusgui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chorusgui"
        mc:Ignorable="d"
        Title="Chorus GUI, Select COM Port" Height="377" Width="386" Background="White" ResizeMode="CanMinimize"
        Closing="Window_Closing">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="logo.png"/>
        </Grid.Background>
        <StackPanel x:Name="sp" Grid.ColumnSpan="2" Margin="86,10" ScrollViewer.VerticalScrollBarVisibility="Hidden" CanVerticallyScroll="True" VerticalAlignment="Center">
            <ComboBox x:Name="comboBox" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Width="160">
                <ComboBoxItem Content="2400 Baud" />
                <ComboBoxItem Content="4800 Baud" />
                <ComboBoxItem Content="9600 Baud" IsSelected="True" />
                <ComboBoxItem Content="19200 Baud" />
                <ComboBoxItem Content="38400 Baud" />
                <ComboBoxItem Content="76800 Baud" />
                <ComboBoxItem Content="115200 Baud" />
            </ComboBox>

        </StackPanel>
    </Grid>
</Window>
